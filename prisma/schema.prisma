datasource db {
  provider = "postgresql"
}


generator client {
  provider = "prisma-client-js"
}

enum Role {
  NURSE
  WITNESS
  ADMIN
}

enum Schedule {
  II
  III
  IV
  V
}

enum TransactionType {
  CHECKOUT
  RETURN
  WASTE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      Role
  createdAt DateTime @default(now())

  nurseTransactions   Transaction[] @relation("Nurse")
  witnessTransactions Transaction[] @relation("Witness")
  auditLogs           AuditLog[]
}

model Medication {
  id        String   @id @default(uuid())
  name      String
  schedule  Schedule
  unit      String
  stock     Float
  createdAt DateTime @default(now())

  transactions Transaction[]
}

model Transaction {
  id           String          @id @default(uuid())
  medicationId String
  nurseId      String
  witnessId    String
  type         TransactionType
  quantity     Float
  notes        String?
  createdAt    DateTime        @default(now())

  medication Medication @relation(fields: [medicationId], references: [id])
  nurse      User       @relation("Nurse", fields: [nurseId], references: [id])
  witness    User       @relation("Witness", fields: [witnessId], references: [id])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  entityType  String
  entityId    String
  performedBy String
  details     Json?
  createdAt   DateTime @default(now())

  user User @relation(fields: [performedBy], references: [id])
}
